{
  "name": "unicord",
  "version": "0.2.0",
  "description": "Universal Discord SDK & Framework",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "build:iife": "tsup --format iife",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "release": "npm version patch && git push --follow-tags",
    "prepare": "npm run build"
  },
  "dependencies": {
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^7.2.0",
    "typescript": "^5.4.5",
    "vitest": "^1.5.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "license": "MIT"
}
